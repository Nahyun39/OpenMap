<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>


<div class = myplacePage>
    <div class = myplaceList>
            <% cafe.forEach( c => { %>
                <div class = "content <%= c.status %>" >
                    <div class="left">
                        <img class="image" src=<%= c.image%> width="110px" height="110px">
                        
                        <div class = content_info>
                            <span class="compName"><%=c.compName%></span>
                            <span class="address"><%=c.address%></span>
                            <span class = "time"><%=c.cafeOpen%> ~ <%=c.cafeClosed%></span>
                            <span class = "status"><%=c.status%></span>
                        </div>
                    </div>
                    <form action="/mypage/config/myplace" method = "post" class="delete">
                        <input type="submit" value="삭제">
                        <input type="hidden" name="comp_id" value= <%= c.compId %> >

                    </form>
                </div>
            <% }); %>
            <% rest.forEach( c => { %>
                <div class = "content <%= c.status %>">
                    <div class="left">
                        <img class="image" src=<%= c.image%> width="110px" height="110px">
                        <div class = content_info>
                            <span class="compName"><%=c.compName%></span>
                            <span class="address"><%=c.address%></span>
                            <span class = "time"><%=c.restOpen%> ~ <%=c.restClosed%></span>
                            <span class = "status"><%=c.status%></span>
                        </div>
                    </div>
                    <form action="/mypage/config/myplace" method = "post" class="delete">
                        <input type="submit" value="삭제">
                        <input type="hidden" name="comp_id" value= <%= c.compId %> >
                    </form>
                </div>
            <% }); %>
            <% hosp.forEach( c => { %>
                <div class = "content <%= c.status %>">
                    <div class="left">
                        <img class="image" src="<%= c.image%>" width="110px" height="110px">
                        <div class = content_info>
                            <span class="compName"><%=c.compName%></span>
                            <span class="address"><%=c.address%></span>
                            <span class = "time"><%=c.hospOpen%> ~ <%=c.hospClosed%></span>
                            <span class = "status"><%=c.status%></span>
                        </div>
                    </div>
                    <form action="/mypage/config/myplace" method = "post" class="delete">
                        <input type="submit" value="삭제">
                        <input type="hidden" name="comp_id" value= <%= c.compId %> >
                    </form>
                </div>
            <% }); %>
    </div>

    <div class="control">
        <input type="text" id="myInput" onkeyup="search()" placeholder="Search for names.." class="search">

        <div class="wrapper">
            <input type="checkbox" onclick='filterOpen(event)' id="switch">
            <label for="switch" class="switch_label">
            <span class="onf_btn"></span>
            </label>
        </div>
        <span>영업중인 곳만 보기</span>
      
        
        
    </div>

</div>


<style>
    :root {
        --main-bg-color: #FBF9FC;
        --text-color: rgb(165, 165, 165);
        --openmap-orange: #FE8201;
        --openmap-orange-light: #ffcf9d;
        --openmap-purple: #894AFF;
        --openmap-green: #77C3CA;
    }

    .myplacePage{
        display: flex;
        flex-direction: row;
        padding-left: 66px;
        padding-top: 126px;
    }

    .myplaceList {
        overflow-y: scroll;
        width: 780px;
        height: 708px;
    }

    .control{
        display: flex;
        flex-direction: column;
        padding-left: 40px;
    }

    .content{
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 19px;
        width: 730px;
        height: 150px;
        background-color: var(--main-bg-color);
        border-radius: 20px;
        line-height:150%;
    }

    .left{
        display: flex;
        flex-direction: row;
        align-items: center;
        padding-left: 20px;
    }
    .content_info{
        padding-left: 24px;
    }

    .image{
        border-radius: 20px;
    }

    .content_info{
        border-left: 24px;
    }

    .compName{
        font-size: 20px;
        font-weight: 600;
        line-height:180%;
    }

    .address{
        display:block;
        color:rgb(107, 107, 107);
        font-size: 13px;
    }

    .time{
        color:var(--openmap-purple);
        font-size: 18px;
        font-weight: 500;
    }

    .status{
        font-size: 12px;
    }
    
    .image{
        display: block;
    }

    .search{
        width: 200px;
        height: 40px;
        background-color: var(--main-bg-color);
        border:hidden;
        border-radius: 20px;
        padding-left: 16px;
    }

    .search:focus{
        outline: 1px solid var(--openmap-purple);
    }

    .wrapper {
    width: 50px;
    height: 50px;
    text-align: center;
    margin-top: 30px;
    }
    #switch {
    position: absolute;
    /* hidden */
    appearance: none;
    -webkit-appearance: none;
    -moz-appearance: none;
    }

    .switch_label {
    position: relative;
    cursor: pointer;
    display: inline-block;
    width: 58px;
    height: 28px;
    background: var(--main-bg-color);
    border: 2px solid var(--openmap-purple);
    border-radius: 20px;
    transition: 0.2s;
    }
  
    .onf_btn {
    position: absolute;
    top: 4px;
    left: 3px;
    display: inline-block;
    width: 20px;
    height: 20px;
    border-radius: 20px;
    background: var(--openmap-purple);
    transition: 0.2s;
    }

    /* checking style */
    #switch:checked+.switch_label {
    background: var(--openmap-purple);
    }

    /* move */
    #switch:checked+.switch_label .onf_btn {
    left: 34px;
    background: #fff;
    box-shadow: 1px 2px 3px #00000020;
    }

    input[type=submit] {
    padding:5px 36px; 
    background: none; 
    border: none;
    cursor:pointer;
}

</style>

<script>
    function filterOpen(event){
        if(event.target.checked){
            $(".영업종료").hide();
            $(".오늘휴무").hide();
            $(".휴게시간").hide();

        }else{
            $(".영업종료").show();
            $(".오늘휴무").show();
            $(".휴게시간").show();
        }

    }
    function search(){
        input = document.getElementById('myInput');
        filter = input.value.toUpperCase();
        li = document.getElementsByClassName('compName');

        for (i = 0; i < li.length; i++) {
            a = li[i];
            txtValue = a.textContent || a.innerText;
            if (txtValue.toUpperCase().indexOf(filter) > -1) {
            li[i].parentElement.parentElement.parentElement.style.display = "";
            } else {
            li[i].parentElement.parentElement.parentElement.style.display = "none";
            }
        }
    }

</script>